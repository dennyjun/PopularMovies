<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.android.popularmovies.fragments.MovieTrailerFragment">
    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loading_trailer_buttons_spinner"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:indeterminate="true" />
    <LinearLayout
        android:id="@+id/movie_trailer_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/movie_trailer_na_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/moviedb_trailer_na"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
